    {
        "key": "ctrl+w h",
        "command": "workbench.action.focusSideBar",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+w ctrl+k",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+w ctrl+l",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "sideBarFocus",
    },
